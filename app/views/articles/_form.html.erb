<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %>
        prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" style="padding-bottom:20px">
    <h3><%= form.label :name, style: "display: block", class: "form-label" %></h3>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="form-group" style="padding-bottom:20px">
    <h3><%= form.label :price, style: "display: block" %></h3>
    <%= form.number_field :price, class:"form-control" %>
  </div>

  <div class="form-group" style="padding-bottom:20px">
    <h3><%= form.label :size, style: "display: block" %></h3>
    <%= form.number_field :size, class:"form-control" %>
  </div>

  <div class="form-group" style="padding-bottom:20px">
    <h3><%= form.label :category, style: "display: block" %></h3>
    <%= form.text_field :category, class:"form-control" %>
  </div>

  <div class="form-group" style="padding-bottom:20px">
    <h3><%= form.label :img, style: "display: block" %></h3>
    <%= form.text_field :img, class:"form-control" %>
  </div>

  <div class="form-group" style="padding-bottom:20px">
    <h3><%= form.label :color, style: "display: block" %></h3>
    <%= form.text_field :color, class:"form-control" %>
  </div>

  <div>
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>
